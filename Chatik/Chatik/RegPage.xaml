<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Назад"
             x:Class="Chatik.RegPage"
             BackgroundColor="#404040">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Регистрация" FontSize="32" HorizontalOptions="Center" TextColor="#F5800C"/>
            <Entry x:Name="usernameEntry" Placeholder = "Логин" Margin="25,25,25,0" TextColor="White"  PlaceholderColor="#F5800C" FontAttributes="Italic"/>
            <Entry x:Name="passwordEntry" Placeholder = "Пароль" IsPassword ="True" Margin="25,0,25,0" TextColor="White"  PlaceholderColor="#F5800C" FontAttributes="Italic"/>
            <Entry x:Name="passwordCheckEntry" Placeholder = "Подтвердите пароль" IsPassword ="True" Margin="25,0,25,15" TextColor="White"  PlaceholderColor="#F5800C" FontAttributes="Italic"/>
            <Button Text = "Зарегистрироваться" FontSize="18" Margin="25" HorizontalOptions="Center" Clicked="OnButtonConfirmClicked" BackgroundColor="#F5800C" TextColor="White" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>